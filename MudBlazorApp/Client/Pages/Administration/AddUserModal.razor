@inject IAuthService AuthService

<EditForm Model="User" OnValidSubmit="Save">
	<FluentValidationValidator @ref="_fluentValidationValidator" />
	<MudDialog>
		<TitleContent>
			<MudText Typo="Typo.h6">
				<MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
				Add User
			</MudText>
		</TitleContent>
		<DialogContent>
			<MudTextField T="string" For="@(() => User.FirstName)" @bind-Value="User.FirstName" Label="FirstName" />
			<MudTextField T="string" For="@(() => User.LastName)" @bind-Value="User.LastName" Label="LastName" />
			<MudTextField For="@(() => User.Email)" @bind-Value="User.Email" Label="Email" />
			<MudTextField For="@(() => User.Password)" @bind-Value="User.Password" Label="Password" 
						  InputType="@_passwordInput" Adornment="Adornment.End" AdornmentIcon="@_passwordInputIcon" OnAdornmentClick="TogglePasswordVisibility" />
			<MudTextField For="@(() => User.ConfirmPassword)" @bind-Value="User.ConfirmPassword" Label="ConfirmPassword" InputType="InputType.Password" />
		</DialogContent>
		<DialogActions>
			<MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Cancel</MudButton>
			<MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Color="Color.Success">Save</MudButton>
		</DialogActions>
	</MudDialog>
</EditForm>