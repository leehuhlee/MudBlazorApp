@page "/profile/{UserUrl}"

@inject IUserService UserService

<MudTitle Title="@Title" Description="@Description"/>

@if(!_loaded)
{
	<MudProgressCircular Color="Color.Primary" Indeterminate="true"/>
}
else
{
	<MudGrid>
		<MudItem xs="12" sm="4" md="3">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText>Profile</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <div class="d-flex justify-center mb-4">
                        @if (string.IsNullOrEmpty(User.ProfilePictureDataUrl))
                        {
                            <MudAvatar Color="Color.Secondary" Style="height:250px; width:250px;">@_firstLetterOfName</MudAvatar>
                        }
                        else
                        {
                            <MudAvatar Image="@User.ProfilePictureDataUrl" Style="height:250px; width:250px;"/>
                        }
                    </div>
                    <MudText Typo="Typo.h6" Align="Align.Center">@User.GetUserName()</MudText>
                    <MudText Align="Align.Center">@User.Email</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" sm="8" md="9">
            <MudCard Elevation="25">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText>Public Profile</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12" md="6">
                            <MudField Label="First Name" Variant="Variant.Text">@User.FirstName</MudField>
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudField Label="Last Name" Variant="Variant.Text">@User.LastName</MudField>
                        </MudItem>
                        <MudItem xs="12" md="6">
                            <MudField Label="Email" Variant="Variant.Text">@User.Email</MudField>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </MudItem>
	</MudGrid>
}